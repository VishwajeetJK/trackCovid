<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="CoVID-19\n Global Cases"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/text_confirm5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_light"
        android:text="Total Confirmed"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/number_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="123456"
        android:textAlignment="center"
        android:textColor="@color/colorTotalDeathsConfirmed"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@+id/text_confirm5"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/text_deaths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/poppins_light"
        android:text="Total Deaths"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/number_deaths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="123456"
        android:textAlignment="center"
        android:textColor="@color/colorDeathsConfirmed"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@+id/text_deaths"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/text_recovered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/poppins_light"
        android:text="Total Recovered"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/number_recovered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="123456"
        android:textAlignment="center"
        android:textColor="@color/colorRecovered"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@+id/text_recovered"
        tools:layout_editor_absoluteX="0dp" />

    <ProgressBar
        android:id="@+id/progress_circular3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="3dp"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintBottom_toTopOf="@+id/number_deaths"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_confirm" />


</androidx.constraintlayout.widget.ConstraintLayout>